<h1>タスク一覧</h1>

<select>
  <option>1</option>
  <option>2</option>
  <option>3</option>
</select>


<table>
  <thead>
    <tr>
      <th>タスク名</th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><h3><%= task.title %></h3></td>
        <td>|</td>
        <td><%= task.priority %></td>
        <td>|</td>
        <td><%= task.status %></td>
        <td>|</td>
        <td><%= link_to "編集", edit_task_path(task) %></td>
        <td>|</td>
        <td><%= link_to "詳細", tasks_detail_path(task) %></td>
        <td>|</td>
        <td><%= link_to "削除", task_path(task), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '作成', new_task_path %>